<?xml version="1.0" encoding="utf-8"?>
<extension type="{{type}}" client="{{client}}" group="{{folder}}" method="upgrade">
	<name>{{nameUpper}}</name>
	<author>{{authorName}}</author>
	<creationDate>{{creationDate}}</creationDate>
	<copyright>{{copyright}}</copyright>
	<license>{{licenseLong}}</license>
	<authorUrl>{{authorUrl}}</authorUrl>
	<version>{{version}}</version>
	<description>{{nameUpper}}_XML_DESCRIPTION</description>

	<updateservers><server type="extension" priority="1" name="{{nameUpper}}">https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/{{filename}}-update.xml</server></updateservers>

	<changelogurl>https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/{{filename}}-changelog.xml</changelogurl>

	<infourl>https://updates.ghsvs.de/changelog.php?file={{filename}}</infourl>

	<scriptfile>installerScript.php</scriptfile>
	<minimumPhp>{{minimumPhp}}</minimumPhp>
	<maximumPhp>{{maximumPhp}}</maximumPhp>
	<minimumJoomla>{{minimumJoomla}}</minimumJoomla>
	<maximumJoomla>{{maximumJoomla}}</maximumJoomla>
	<allowDowngrades>{{allowDowngrades}}</allowDowngrades>

	<files>
		<filename plugin="{{filename}}">{{filename}}.php</filename>
		<folder>language</folder>
		<filename>installerScript.php</filename>
		<filename>LICENSE.txt</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="onlyNewMenuItems" type="list" default="1"
				label="Only new menu items"
				description="Set datetime alias only if a new menu item (of type Menu Item Alias) is saved for the first time? If NO then datetime alias will be set always if Alias field (of Menu Item Alias) is empty.">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
